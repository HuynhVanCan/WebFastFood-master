
@model IEnumerable<VSLT_FastfoodTeam.Models.KhachHang>
@using VSLT_FastfoodTeam.Models
@{
    TaiKhoan kh = (TaiKhoan)Session["TaiKhoan"];

}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="header">
        <div class="header-top">
            <div class="container">
                <div class="header-left" style="float:right">
                    <ul style="float:left">
                        @if (Session["TaiKhoan"] != null)
                        {

                            <li>@Html.ActionLink("Đăng Xuất", "DangXuat", "User")</li>
                            <li style="color:white;text-align:center;margin-top:2%;">Xin chào bạn: @kh.TenTK </li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("DangNhap", "User")">Đăng Nhập</a></li>
                            <li><a href="@Url.Action("DangKy", "User")">Đăng Ký</a></li>
                        }
                        @Html.Partial("~/Views/GioHang/GioHangPartial.cshtml")
                    </ul>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="head-top">
                <div class="logo">
                    <a href="@Url.Action("Index","LayoutMain")"><img src="~/Content/pic/namestore.png" alt="" style="width:300px; height:50px"></a>
                </div>
                @Html.Action("MenuPartial", "LayoutMain")
                <div class="clearfix"> </div>
            </div>
        </div>

    </div>














    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Food")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.Partial("~/Views/Giohang/GioHangPartial.cshtml")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy;GCMW Fast Food @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)
</body>
</html>
